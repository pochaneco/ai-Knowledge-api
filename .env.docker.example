# Docker開発環境用の環境変数設定
# .env.example からコピーして作成

# データベース接続設定（Docker内での接続）
DB_HOST=db
DB_PORT=3306
DB_USER=app_user
DB_PASSWORD=app_password
DB_NAME=ai_knowledge_db
DB_CHARSET=utf8mb4

# Docker用データベース設定
MYSQL_ROOT_PASSWORD=root_password

# Flask設定
FLASK_ENV=development
FLASK_APP=app.py
FLASK_DEBUG=True
SECRET_KEY=docker-development-secret-key

# 開発モード設定
NODE_ENV=development

# SQLAlchemy設定
SQLALCHEMY_TRACK_MODIFICATIONS=False
SQLALCHEMY_ECHO=True

# メール設定（開発用 - Mailhogなど使用）
MAIL_SERVER=localhost
MAIL_PORT=1025
MAIL_USE_TLS=false
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_DEFAULT_SENDER=noreply@ai-knowledge-api.com

# Google OAuth設定（開発用）
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# ポート設定(お好みで変更可能)
# DB_FORWARD_PORT=3306
# MAILHOG_SMTP_PORT=1025
# MAILHOG_WEB_PORT=8025
# WEB_API_PORT=5000
# VITE_PORT=5173
