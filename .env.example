# 環境変数テンプレート
# このファイルをコピーして .env.local または .env.production として使用してください

# データベース接続設定
DB_HOST=localhost
DB_PORT=3306
DB_USER=your_username
DB_PASSWORD=your_password
DB_NAME=your_database_name
DB_CHARSET=utf8mb4

# Docker用データベース設定（Docker Compose使用時）
MYSQL_ROOT_PASSWORD=root_password

# Flask設定
FLASK_ENV=development
FLASK_APP=app.py
FLASK_DEBUG=True
SECRET_KEY=your_secret_key

# SQLAlchemy設定
SQLALCHEMY_TRACK_MODIFICATIONS=False
SQLALCHEMY_ECHO=True

# メール設定
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_DEFAULT_SENDER=noreply@ai-knowledge-api.com

# Google OAuth設定
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# 使用方法:
# ローカル開発: .env.local にコピーして設定値を変更
# Docker開発: .env.local でDocker用の設定を使用
# 本番環境: .env.production にコピーして設定値を変更
